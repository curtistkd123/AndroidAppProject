<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
    <shape>
        <gradient
            android:angle="45"
            android:centerColor="@color/greenTea"
            android:startColor="@color/everGreen"
            android:endColor="@color/mossGreen"/>
        <stroke
            android:width="2dp"
            android:color="@color/colorStroke"/>
        <corners
            android:radius="12dp"/>
    </shape>
</item>
    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="135"
                android:centerColor="@color/colorStroke"
                android:startColor="@color/whiteMiddle"
                android:endColor="@color/colorGold"/>
            <stroke
                android:width="2dp"
                android:color="@color/colorStroke"/>
            <corners
                android:radius="12dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="0"
                android:centerColor="@color/colorPrimaryDark"
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorOutput"/>
            <stroke
                android:width="2dp"
                android:color="@color/colorStroke"/>
            <corners
                android:radius="12dp"/>
        </shape>
    </item>

</selector>